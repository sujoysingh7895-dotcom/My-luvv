<script>

function startLove(){
    document.getElementById("startScreen").style.display="none";
    document.getElementById("bgMusic").play();
}

function sayYes(){

    document.getElementById("result").style.display="block";

    for(let i=0;i<40;i++){createHeart();}
    for(let i=0;i<30;i++){createPetal();}

    document.body.style.background="linear-gradient(to bottom, black, #ff4e8a)";

    setTimeout(()=>{
        document.getElementById("yesScreen").style.display="flex";
        startSlideshow();
        createSparkles();
    },2000);
}

function moveButton(){
    const btn=document.getElementById("no");
    btn.style.top=Math.random()*80+"vh";
    btn.style.left=Math.random()*80+"vw";
}

function createHeart(){
    const heart=document.createElement("div");
    heart.classList.add("heart");
    heart.innerHTML="â¤";
    heart.style.left=Math.random()*100+"vw";
    heart.style.fontSize=Math.random()*20+10+"px";
    document.body.appendChild(heart);
    setTimeout(()=>{heart.remove();},4000);
}

function createPetal(){
    const petal=document.createElement("div");
    petal.classList.add("petal");
    petal.innerHTML="ğŸŒ¹";
    petal.style.left=Math.random()*100+"vw";
    petal.style.animationDuration=(Math.random()*3+3)+"s";
    petal.style.fontSize=(Math.random()*20+15)+"px";
    document.body.appendChild(petal);
    setTimeout(()=>{petal.remove();},6000);
}

/* Sparkle Creator */
function createSparkles(){
    for(let i=0;i<30;i++){
        const star=document.createElement("div");
        star.classList.add("sparkle");
        star.style.top=Math.random()*100+"%";
        star.style.left=Math.random()*100+"%";
        star.style.animationDuration=(Math.random()*3+2)+"s";
        document.getElementById("yesScreen").appendChild(star);
    }
}

let photos=["/ishu.jpg","/girl.jng.jpg","/suit.jng.png","/couple.jng.png"];
let index=0;

function startSlideshow(){
    setInterval(()=>{
        index++;
        if(index>=photos.length){index=0;}
        document.getElementById("slideImage").src=photos[index];
    },2000);
}

</script>

